<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/top_head"
    android:layout_width="match_parent"
    android:layout_height="44.0dip"
    android:background="@drawable/bg_top_head" >

    <FrameLayout
        android:id="@+id/top_head_menu_container"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:paddingLeft="10.0dip"
        android:paddingRight="10.0dip" >

        <ImageView
            android:id="@+id/top_head_menu"
            android:layout_width="@dimen/head_size"
            android:layout_height="@dimen/head_size"
            android:layout_gravity="center_vertical"
            android:background="@drawable/selector_top_head_menu"
            android:clickable="true"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:padding="2.0dip"
            android:scaleType="fitXY"
            android:src="@drawable/default_round_head" />
    </FrameLayout>

    <RelativeLayout
        android:id="@+id/top_head_title_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true" >

        <TextView
            android:id="@+id/top_head_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:text="HAHAMX"
            android:textColor="@color/white"
            android:textSize="30.0sp" />
    </RelativeLayout>

    <FrameLayout
        android:id="@+id/top_head_login_container"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:paddingLeft="10.0dip"
        android:paddingRight="10.0dip" >

        <ImageView
            android:id="@+id/top_head_login"
            android:layout_width="@dimen/head_size"
            android:layout_height="@dimen/head_size"
            android:layout_gravity="center_vertical"
            android:background="@drawable/selector_top_head_login"
            android:clickable="true"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:padding="2.0dip"
            android:scaleType="fitCenter"
            android:src="@drawable/right_drawer_normal" />
    </FrameLayout>

</RelativeLayout>